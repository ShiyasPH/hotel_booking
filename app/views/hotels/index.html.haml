.container-fluid
  -@availableid.each do |hotel|
    %ol
      .row
        .col-sm-6{:style => "background-color:lavender;"}
          %h4=hotel.name
          %br/
          %p= link_to "Book", booking_path(@current_booking), class: "btn btn-lg btn-primary"
        .col-sm-6{:style => "background-color:lavenderblush;"}
          %p Cost per day for single room: Rs. 1000
          %p Cost per day for double room: Rs. 2000
          %p Cost per day for triple room: Rs. 3000