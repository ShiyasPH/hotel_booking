%h2 New Reservation
= form_for(@bookings) do |f|
  - if @bookings.errors.any?
    #error_explanation
      %h2
        = pluralize(@bookings.errors.count, "error")
        prohibited this reservation from being saved:
      %ul
        - @bookings.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :start
    %br/
    = f.date_select :start
  .field
    = f.label :end
    %br/
    = f.date_select :end
  .field
    = f.label :room_type
    %br/
    = f.select :room_type, options_for_select(['single room', 'double room'])
  .field
    = f.label :guest_name1
    %br/
    = f.text_field :guest_name1
  #second_name.field
    = f.label :guest_name2
    %br/
    = f.text_field :guest_name2
  .actions
    = f.submit
  .field
    = f.label :start
    %br/
    = f.date_select :start
  .field
    = f.label :end
    %br/
    = f.date_select :end
  .field
    = f.label :room_type
    %br/
    = f.select :room_type, options_for_select(['single room', 'double room'])
  .field
    = f.label :guest_name
    %br/
    = f.text_field :guest_name
  .actions
    = f.submit